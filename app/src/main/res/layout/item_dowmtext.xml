<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ll_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginTop="15dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15sp"
        android:src="@mipmap/female"/>
    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#f50843"/>
    <cn.suanzi.newdemo.view.CountDownTextureView
        android:id="@+id/count_down_view"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="15dp"
        app:easyCountRectHeight="14dp"
        app:easyCountRectRadius="2dp"
        app:easyCountRectSpacing="10dp"
        app:easyCountRectWidth="14dp"
        app:easyCountTimeSize="11sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</LinearLayout>
