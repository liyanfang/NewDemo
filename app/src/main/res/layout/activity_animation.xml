<?xml version="1.0" encoding="utf-8"?>
<cn.suanzi.newdemo.View.SildingFinishLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ly_text"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white">
        <FrameLayout
            android:id="@+id/ttg_fy_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
                <ImageView
                    android:id="@+id/iv_image"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:visibility="visible"
                    android:layout_gravity="center"
                    android:src="@mipmap/tata_pull"/>
                <RelativeLayout
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="3dp">
                        <ImageView
                            android:id="@+id/iv_ball_l"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:visibility="visible"
                            android:layout_gravity="center"
                            android:src="@drawable/shape_gray_round"/>
                        <ImageView
                            android:id="@+id/iv_ball_c"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:visibility="visible"
                            android:layout_gravity="center"
                            android:src="@drawable/shape_gray_round"/>
                        <ImageView
                            android:id="@+id/iv_ball_r"
                            android:layout_width="3dp"
                            android:layout_height="3dp"
                            android:layout_gravity="center"
                            android:visibility="visible"
                            android:src="@drawable/shape_gray_round"/>
                </RelativeLayout>

                <Button
                    android:id="@+id/btn_id7"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_gravity="bottom"
                    android:text="stop"/>
                <Button
                    android:id="@+id/btn_id6"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:text="Click"/>
                <TextView
                    android:id="@+id/text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"/>
        </FrameLayout>
</cn.suanzi.newdemo.View.SildingFinishLayout>
